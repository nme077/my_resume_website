<div class="colored-container">
    <div class="education-container container">
        <!--Education-->
        <span class="anchor" id="education"></span>
        <h2 class="headingText">Education</h2>
        <% if(loggedIn) { %>
            <form action="/resume/education/new" method="GET">
                <button class="btn btn-success">
                    Add new education
                </button>
            </form>
        <% }; %>

        <div class="row">
            <% education.forEach(item => { %>
                <div class="col-sm-12 col-md-6 my-2">
                    <div class="card border-0 bg-transparent">
                        <div class="card-body">
                            <img src="<%= item.image %>" class="card-img-top" style="max-width: 45%; height: auto; padding-bottom:15px;">
                            <h5 class="card-title"><%= item.degree %></h5>
                            <h6 class="card-subtitle mb-2 text-muted"><%= item.field %></h6>
                            <p class="card-text"><%= item.misc %></p>
                            <% if(loggedIn) { %>    
                                    <form  action="/resume/education/<%= item._id %>/edit" method="GET">
                                        <button class="btn btn-primary btn-block">
                                            Edit
                                        </button>
                                    </form>
                                    <form class="form" action="/resume/education/<%= item._id %>?_method=DELETE" method="POST">
                                        <button class="btn btn-danger btn-block">
                                            Delete
                                        </button>
                                    </form>
                            <% }; %>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    </div>

<!--Experience-->
<div class="experience-container container">
    <span class="anchor" id="experience"></span>
    <h2 class="headingText">Experience</h2>
    <% if(loggedIn) { %>
        <form action="/resume/experience/new" method="GET">
            <button class="btn btn-success">
                Add new experience
            </button>
        </form>
    <% }; %>
    
    <div class="row">
        <% jobs.forEach(item => { %>
            <div class="col-sm-12 col-md-6 my-2">
                <div class="card border-0 bg-transparent">
                    <div class="card-body">
                        <img src="<%= item.image %>" class="card-img-top" style="max-width: 45%; height: auto; padding:15px;">
                        <h5 class="card-title"><%= item.title %></h5>
                        <h6 class="card-subtitle mb-2 text-muted"><%= item.company %></h6>
                        <p class="card-text location-and-date text-muted"><%= item.location %>; <%= item.duration %></p>
                        <p class="card-text"><%= item.description %></p>
                        <% if(loggedIn) { %>    
                            <form  action="/resume/experience/<%= item._id %>/edit" method="GET">
                                <button class="btn btn-primary btn-block">
                                    Edit
                                </button>
                            </form>
                            <form class="form" action="/resume/experience/<%= item._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-danger btn-block">
                                    Delete
                                </button>
                            </form>
                    <% }; %>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

