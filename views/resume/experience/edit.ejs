<%- include('../../partials/header.ejs') %>
<div class="container">
    <div class="row">
        <div class="col-md-6 m-auto">

            <h1>Edit Experience</h1>

            <form action="/experience/<%= experience._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="image-input">Image</label>
                    <input type="text" class="form-control" id="image-input" name="job[image]" value="<%= experience.image %>">
                </div>
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="job[title]" value="<%= experience.title %>">
                </div>
                <div class="form-group">
                    <label for="company">Company</label>
                    <input type="text" class="form-control" id="company" name="job[company]" value="<%= experience.company %>">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input type="text" class="form-control" id="location" name="job[location]" value="<%= experience.location %>">
                </div>
                <div class="form-group">
                    <label for="duration">Duration of Employment</label>
                    <input type="text" class="form-control" id="duration" name="job[duration]" value="<%= experience.duration %>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" name="job[description]"><%= experience.description %></textarea>
                </div> 

                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>  
    </div>
</div>





<%- include('../../partials/footer.ejs') %>