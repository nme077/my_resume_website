<%- include('../../partials/header.ejs') %>
<div class="container">
    <div class="row">
        <div class="col-md-6 m-auto">
            <h1>Edit Education</h1>

            <form action="/education/<%= education._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="image-input">Image</label>
                    <input type="text" class="form-control" id="image-input" name="education[image]" value="<%= education.image %>">
                </div>
                <div class="form-group">
                    <label for="degree">Degree</label>
                    <input type="text" class="form-control" id="degree" name="education[degree]" value="<%= education.degree %>">
                </div>
                <div class="form-group">
                    <label for="field">Field</label>
                    <input type="text" class="form-control" id="field" name="education[field]" value="<%= education.field %>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea type="text" class="form-control" id="description" name="education[description]"><%= education.description %></textarea>
                </div>

                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
</div>




<%- include('../../partials/footer.ejs') %>