<%- include('../../partials/header.ejs') %>
<div class="container">
    <div class="row">
        <div class="col-md-6 m-auto">
            <h1>Edit Qualification</h1>

            <form action="/resume/qualifications/<%= qualification._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" id="title" name="qualification[title]" placeholder="Title" value="<%= qualification.title %>">
                </div>
                <ul id="qual-list" style="list-style: none; padding-left: 0;">
                    <% qualification.points.forEach(item => { %>
                        <li class="qual-input">
                            <div class="form-group">
                              <textarea type="text" class="form-control" id="description" name="qualification[points]" placeholder="Skills" style="resize: none;"><%= item.point %></textarea>
                            </div>
                            <div class="btn btn-danger remove-qual">X</div>
                          </li>
                    <% }) %>
                </ul>
                <div class="btn btn-primary" id="add-qual">+</div>

                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %>